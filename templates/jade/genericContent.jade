
article(id="content-{{:id}}",class="item {{if valid == false}}item-hidden{{/if}} {{if pinned == true}}item-pinned{{/if}} {{if selected == true}}item-selected{{/if}}")
    .content-inner
        header
            .byline
                {{include tmpl="genericAuthor" /}}
        .article-content
            {{contentFormatter:text}}
        .article-medias
            {{include tmpl="mediaList" /}}
        {{if pinned == true}}
        .pinned
            i(class="fa fa-thumb-tack ")  
        {{/if}}
